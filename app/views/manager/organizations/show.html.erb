<div id="show" class="form-group panel panel-primary">
  <div class="panel-heading">
    <%= @organization.real_name %>
  </div>
  <div class="panel-body">
    <div class="display">
      <table class="account_box">
        <tr>
          <th rowspan="5" class="thumbnail_box">
          <div class="account_thumbnail">
            <% if @organization.image && @organization.image.thumbnail_data.present? %>
              <%= image_tag manager_organization_thumbnail_path(organization_id: @organization.id, format: @organization.image.thumbnail_extension) %>
            <% else %>
            <p>No Image</p>
            <% end %>
          </div>
        </th>
        <td class="address">
          <b>団体名</b>
          <span class="body"><%= @organization.screen_name %></span>
        </td>
        </tr>
        <tr>
          <td class="address">
            <b>電話番号</b>
            <span class="body"><%= @organization.organization_address.show_phone %></span>
          </td>
        </tr>
        <tr>
          <td class="address">
            <b>Mobile</b>
            <span class="body"><%= @organization.organization_address.show_mobile %></span>
          </td>
        </tr>
        <tr>
          <td class="address">
            <b>Fax</b>
            <span class="body"><%= @organization.organization_address.show_fax %></span>
          </td>
        </tr>
        <tr>
          <td class="address">
            <b>住所</b>
            <span class="body"><%= @organization.organization_address.full_address %></span>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>