<div id="form" class="form-group panel panel-primary">
  <div class="panel-heading">
    Show <%= @item.display_name %>
  </div>

  <div class="panel-body">
    <div class="position">
      <div class="btn-group">
        <button type="button" class="btn btn-primary">
          <%= @item.display_price %>&nbsp;/&nbsp;<%= @item.display_show %>
        </button>
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
          <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "Edit", [ :edit, :manager, @organization, @item ], style: "font-weight: bold;" %></li>
          <li class="divider"></li>
          <li>
            <%= link_to "Destroy", [ :manager, @organization, @item ], 
              method: :delete, style: "color: red; font-weight: bold;",
              data: { confirm: "Are You Sure?" } %>
          </li>
        </ul>
      </div>
    </div>

    <%= @item.description %>
    <hr>

    <% if @item.image && @item.image.data1.present? %>
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
          <% if @item.image && @item.image.data2.present? %>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
          <% end %>
          <% if @item.image && @item.image.data3.present? %>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
          <% end %>
        </ol>

        <div class="carousel-inner">
          <div class="item active">
            <%= image_tag data1_item_path(id: @item.id, format: @item.image.extension1) %>
          </div>
          <% if @item.image && @item.image.data2.present? %>
            <div class="item">
              <%= image_tag data2_item_path(id: @item.id, format: @item.image.extension2) %>
            </div>
          <% end %>
          <% if @item.image && @item.image.data3.present? %>
            <div class="item">
              <%= image_tag data3_item_path(id: @item.id, format: @item.image.extension3) %>
            </div>
          <% end %>
        </div>

        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
      </div>
    <% end %>
  </div>
</div>