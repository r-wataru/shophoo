<div id="show" class="form-group panel panel-primary">
  <div class="panel-heading">
    <%= current_user.screen_name %>
  </div>
  <div class="panel-body">
    <div class="display">
      <table class="account_box">
        <tr>
          <th rowspan="12" class="thumbnail_box">
          <div class="account_thumbnail">
            <% if current_user.image && current_user.image.thumbnail_data.present? %>
              <%= image_tag thumbnail_user_path(user_id: current_user.id, format: current_user.image.thumbnail_extension) %>
            <% else %>
            <p>No Image</p>
            <% end %>
          </div>
        </th>
        <td class="address">
          <b><%= t(".screen_name") %></b>
          <span class="body"><%= current_user.screen_name %></span>
        </td>
        </tr>
        <tr>
          <td class="address">
            <b><%= t(".emails") %></b>
            <span class="body">
              <ul>
                <% current_user.emails.active.each do |email| %>
                  <li>
                    <%= email.address %>
                  </li>
                <% end %>
              </ul>
              <%= link_to t(".new_email"), [ :new_email, current_user ] %>
            </span>
          </td>
        </tr>
        <tr>
          <td class="address">
            <b><%= t(".phone") %></b>
            <span class="body"><%= current_user.private_address.show_phone %></span>
          </td>
        </tr>
        <tr>
          <td class="address">
            <b><%= t(".mobile") %></b>
            <span class="body"><%= current_user.private_address.show_mobile %></span>
          </td>
        </tr>
        <tr>
          <td class="address">
            <b><%= t(".fax") %></b>
            <span class="body"><%= current_user.private_address.show_fax %></span>
          </td>
        </tr>
        <tr>
          <td class="address">
            <b><%= t(".address") %></b>
            <span class="body"><%= current_user.private_address.full_address %></span>
          </td>
        </tr>
        <tr>
          <td class="address">
            <b><%= t(".company_name") %></b>
            <span class="body"><%= current_user.work_address.company_name %></span>
          </td>
        </tr>
        <tr>
          <td class="address">
            <b><%= t(".work_phone") %></b>
            <span class="body"><%= current_user.work_address.show_phone %></span>
          </td>
        </tr>
        <tr>
          <td class="address">
            <b><%= t(".work_mobile") %></b>
            <span class="body"><%= current_user.work_address.show_mobile %></span>
          </td>
        </tr>
        <tr>
          <td class="address">
            <b><%= t(".work_fax") %></b>
            <span class="body"><%= current_user.work_address.show_fax %></span>
          </td>
        </tr>
        <tr>
          <td class="address">
            <b><%= t(".work_address") %></b>
            <span class="body"><%= current_user.work_address.full_address %></span>
          </td>
        </tr>
        <tr>
          <td class="address">
            <b><%= t(".work_about") %></b>
            <span class="body"><%= current_user.work_address.about %></span>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>