<div id="show" class="form-group panel panel-primary">
  <div class="panel-heading">
    Add Email
  </div>
  <div class="panel-body">
    <div class="form">
      <%= form_for @email, url: [ :create_email, current_user ], method: :post do |f| %>
        <div style="margin-bottom: 20px;">
          <%= f.label :address, t(".address") %><br/>
          <%= format_error_message(@email, :address, f).html_safe %>
          <%= f.text_field :address, class: "not_ime form-control" %>
        </div>
        <%= f.submit "Update", class: "btn label-primary", style: "color: #fff; margin-bottom: 10px; width: 100%;" %>
      <% end %>
    </di
  </div>
</div>